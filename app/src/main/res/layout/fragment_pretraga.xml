<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PretragaFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnStudNaPred"
            android:layout_width="232dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/green"
            android:text="STUDENTI NA PREDMETU"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvpretraga" />

        <Button
            android:id="@+id/btnKoJePolozio"
            android:layout_width="232dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/green"
            android:text="KO JE POLOZIO..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnStudNaPred" />

        <Button
            android:id="@+id/btnKoNijePolozio"
            android:layout_width="232dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/green"
            android:text="KO NIJE POLOZIO..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnKoJePolozio" />

        <Button
            android:id="@+id/btnSpisakNepolozenih"
            android:layout_width="232dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/green"
            android:text="SPISAK NEPOLOZENIH"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSpisakPolozenih" />

        <Button
            android:id="@+id/btnSpisakKat"
            android:layout_width="232dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/green"
            android:text="SPISAK KATEGORIJA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSpisakNepolozenih" />

        <Button
            android:id="@+id/btnSpisakPolozenih"
            android:layout_width="232dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/green"
            android:text="SPISAK POLOZENIH"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnKoNijePolozio" />

        <TextView
            android:id="@+id/tvpretraga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="PRETRAGA"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>